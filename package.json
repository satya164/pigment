{
  "name": "pigment",
  "description": "A library for creating interactive command-line UI",
  "version": "0.3.9",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satya164/pigment.git"
  },
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com>",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "type": "module",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/src/index.d.ts",
      "default": "./lib/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "node --test --test-reporter=@voxpelli/node-test-pretty-reporter src/**/*.test.ts",
    "release": "release-it --only-version"
  },
  "dependencies": {
    "ansi-escapes": "^7.2.0",
    "wrap-ansi": "^9.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.10.1",
    "@voxpelli/node-test-pretty-reporter": "^1.1.2",
    "commitlint": "^20.1.0",
    "eslint": "^9.39.1",
    "eslint-config-satya164": "^5.1.5",
    "expect-type": "^1.2.2",
    "lefthook": "^2.0.4",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.9.1"
}
